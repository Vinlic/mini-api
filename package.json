{
  "name": "mini-api",
  "version": "0.0.1",
  "description": "A lightweight Node.js API framework that does not require learning.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --format cjs,esm --sourcemap --dts --publicDir public --watch --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "build": "tsup src/index.ts --format cjs,esm --sourcemap --dts --clean --publicDir public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vinlic/mini-api.git"
  },
  "keywords": [
    "api",
    "web",
    "app",
    "server",
    "framework"
  ],
  "author": "Vinlic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Vinlic/mini-api/issues"
  },
  "homepage": "https://github.com/Vinlic/mini-api#readme",
  "devDependencies": {
    "@types/lodash": "^4.17.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "cron": "^3.1.6",
    "date-fns": "^3.3.1",
    "fs-extra": "^11.2.0",
    "koa": "^2.15.0",
    "koa-body": "^5.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-range": "^0.3.0",
    "koa-router": "^12.0.1",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "mime": "^4.0.1",
    "minimist": "^1.2.8",
    "randomstring": "^1.3.0",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  }
}
